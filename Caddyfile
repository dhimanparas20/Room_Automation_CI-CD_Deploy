# Redirect HTTP (port 80) to HTTPS (port 443)
{$WEB_DOMAIN}:80 {
    redir https://{host}{uri} permanent
}

# Serve static files (index.html, styles.css, script.js) on port 5000
{$WEB_DOMAIN} {
    root * /srv
    file_server
}

# Scheduler on HTTPS (secured connection)
scheduler.{$WEB_DOMAIN} {
    reverse_proxy scheduler:8000
}

# Default HTTPS configuration for mqttx-web
dash.{$WEB_DOMAIN} {
    reverse_proxy emqx:18083
}

# WSS configuration for mqtt.mstservices.tech (WebSocket Secure)
mqtt.{$WEB_DOMAIN} {
    reverse_proxy emqx:1884
}

# LazyDocker For Logs. Run below Command to generate password hash
# sudo docker run --rm caddy:latest caddy hash-password --plaintext 'yourStrongPassword'
logs.{$WEB_DOMAIN} {
    basic_auth {
        admin $2a$14$VzMr0deD1LOiY0ExYP6xhOAoSISmrsH.f1yX8eRWyTYebGTrr7WRC
    }
    reverse_proxy lazydocker-web:7681
}
